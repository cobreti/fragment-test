    "version": "0.2.0",
    "configurations": [
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "main server",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "./server.js",
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ],
            "cwd": "${workspaceFolder}/servers/main"
        },
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "fragment-site server",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "./server.js",
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ],
            "cwd": "${workspaceFolder}/servers/fragment"
        }
    ]
}